# Função (1009);
def calcular_salario():
    # Entrada de dados
    nome_vendedor = input("Digite o nome do vendedor: ")
    salario_fixo = float(input("Digite o salário fixo do vendedor: "))
    total_vendas = float(input("Digite o total de vendas do vendedor: "))

    # Cálculo da comissão
    comissao = total_vendas * 0.15
    total_a_receber = salario_fixo + comissao

    # Saída formatada com duas casas decimais
    print(f"TOTAL = R$ {total_a_receber:.2f}")

# Chama a função
calcular_salario()
